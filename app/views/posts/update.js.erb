// This file has to have the same name as the action in the controller
$("#updatepost_<%= @post.id %>").modal('hide');

$("#post_<%= @post.id %>").fadeOut(500, function(){
  $(this).remove();
	$("#container_posts").append('<%= j render @post %>').fadeIn(200);
  $('.grid').masonry({
    itemSelector: '.grid-item',
    percentPosition: true,
    columnWidth: '.grid-sizer'
  });
});

console.log("Post was updated.");
